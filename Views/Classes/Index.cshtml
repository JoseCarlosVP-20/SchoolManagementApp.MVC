@model IEnumerable<SchoolManagementApp.MVC.Data.Class>

@{
    ViewData["Title"] = "Classes";
}

<h1>Classes</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table dTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lecturer.FirstName)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <button class="btn btn-danger deleteBtn" data-id="@item.Id">Delete</button>
                    <a asp-action="ManageEnrollments" class="btn btn-success" asp-route-classId="@item.Id">Manage
                        Enrollments</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" id="classesDeleteFrom">
    <input type="hidden" id="classId" name="Id">
</form>

@section Scripts{
<script src="~/js/Classes.js"></script>
}